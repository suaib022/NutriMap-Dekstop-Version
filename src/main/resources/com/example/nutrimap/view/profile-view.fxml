<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.nutrimap.controller.ProfileController"
      alignment="CENTER" spacing="30" style="-fx-padding: 50;">
    <VBox alignment="CENTER" spacing="15" styleClass="card" maxWidth="400">
        <Circle fx:id="avatarCircle" radius="50" fill="gray"/>
        <Label fx:id="nameLabel" text="User Name" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Label fx:id="emailLabel" text="email@example.com" style="-fx-text-fill: #7f8c8d;"/>
        <Label fx:id="roleLabel" text="ROLE" style="-fx-background-color: #ecf0f1; -fx-padding: 5 10; -fx-background-radius: 15;"/>
    </VBox>
</VBox>
